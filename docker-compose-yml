---
version: '3.3'
services:
  iotabot:
    build:
      context: .
      dockerfile: Dockerfile
    labels:
      "autoheal": "true"
    ports:
      - 8090:8090
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8090/status"]
      interval: 10s
      timeout: 3s
      retries: 10
    network_mode: "host"
    image: iotabot
    restart: always

  autoheal:
    image: willfarrell/autoheal
    container_name: autoheal
    volumes:
      - '/var/run/docker.sock:/var/run/docker.sock'
    environment:
      - AUTOHEAL_INTERVAL=10
      - CURL_TIMEOUT=30
